<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Transparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>


    <style name="BookMarkCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SearchCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGray3</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!--        stateVisible-->
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_border_bottom_sheet</item>
    </style>

    <style name="TextInputLayoutOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_6dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_6dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_6dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_6dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorIconPrimary</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeColor">@color/colorTextHint</item>
        <item name="strokeWidth">@dimen/space_1dp</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="android:hint">Page</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/BookMarkCustomTabText</item>
        <item name="tabSelectedTextColor">@color/colorTextTabMainSelected</item>
        <item name="tabTextColor">@color/colorTextTabMainUnSelect</item>
        <item name="tabIndicatorColor">@color/colorTabMain</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabBackground">@color/colorTabMain</item>
        <item name="elevation">1dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>