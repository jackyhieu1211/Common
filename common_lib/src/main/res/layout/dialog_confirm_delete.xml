<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_20dp"
        android:background="@drawable/border_compress_dialog"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_16dp"
        android:paddingTop="@dimen/space_27dp"
        android:paddingEnd="@dimen/space_16dp"
        android:paddingBottom="@dimen/space_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:text="Delete"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_delete_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_9dp"
            android:text="@string/title_delete_file"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_delete"
                android:padding="@dimen/space_16dp"
                android:text="Cancel"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/space_16dp"
                android:text="Delete"
                android:textColor="@color/colorBaseRed"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
