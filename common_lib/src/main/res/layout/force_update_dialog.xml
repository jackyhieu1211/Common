<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_16dp"
    android:background="@drawable/border_bg_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/space_12dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16dp"
        android:background="@drawable/border_bg_child"
        android:orientation="vertical"
        android:padding="@dimen/space_16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_16dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/force_update_dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_12dp"
            android:gravity="center_vertical"
            android:text="Better and faster version available"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:gravity="center_vertical"
            android:text="An update with new features and fixes is available.\nIt typically takes less than 1 minute"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_14sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_32dp"
            android:layout_marginBottom="@dimen/space_16dp"
            android:background="@drawable/selector_button_app"
            android:enabled="true"
            android:gravity="center"
            android:paddingHorizontal="@dimen/space_16dp"
            android:paddingVertical="@dimen/space_20dp"
            android:text="Update Now"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
