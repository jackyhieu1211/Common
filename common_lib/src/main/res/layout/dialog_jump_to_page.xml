<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_20dp"
        android:background="@drawable/border_compress_dialog"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_16dp"
        android:paddingTop="@dimen/space_27dp"
        android:paddingEnd="@dimen/space_16dp"
        android:paddingBottom="@dimen/space_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:text="Jump to a page"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilJumToPage"
            style="@style/TextInputLayoutOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_9dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtJumToPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1-21"
                android:inputType="number"
                android:textSize="@dimen/text_size_18sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnOK"
                android:padding="@dimen/space_16dp"
                android:text="@string/cancel"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="@dimen/space_24dp"
                android:paddingVertical="@dimen/space_16dp"
                android:text="@string/ok"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
